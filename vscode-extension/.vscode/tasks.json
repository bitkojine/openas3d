{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: watch",
            "type": "npm",
            "script": "watch",
            "problemMatcher": {
                "owner": "webpack",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^[ ]*([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[webpack-cli\\] Compiler starting\\.\\.\\.",
                    "endsPattern": "^\\[webpack-cli\\] Compiler finished"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "npm: watch-tests",
            "type": "npm",
            "script": "watch-tests",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": "build"
        },
        {
            "label": "npm: compile",
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "package extension",
            "type": "shell",
            "command": "vsce",
            "args": [
                "package"
            ],
            "group": "build"
        }
    ]
}