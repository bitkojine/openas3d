{
  "name": "openas3d-vscode",
  "displayName": "OpenAs3D - 3D Codebase Explorer",
  "description": "Visualize codebase dependencies and architecture in navigable 3D worlds",
  "version": "0.2.2",
  "publisher": "openas3d",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitkojine/openas3d"
  },
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "3d",
    "visualization",
    "dependencies",
    "architecture",
    "codebase",
    "explorer"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onWebviewPanel:openas3d-world"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openas3d.exploreDependencies",
        "title": "Explore Dependencies in 3D",
        "category": "OpenAs3D"
      },
      {
        "command": "openas3d.openAs3DWorld",
        "title": "Open as 3D World",
        "category": "OpenAs3D"
      },
      {
        "command": "openas3d.dev.toggleHotReload",
        "title": "Development: Toggle Hot Reload",
        "category": "OpenAs3D"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "openas3d.exploreDependencies",
          "when": "explorerResourceIsFolder",
          "group": "navigation@10"
        }
      ],
      "commandPalette": [
        {
          "command": "openas3d.exploreDependencies"
        },
        {
          "command": "openas3d.openAs3DWorld"
        }
      ]
    }
  },
  "scripts": {
    "prebuild": "npm version patch --no-git-tag-version",
    "build": "npm run compile && npm run package",
    "build:prod": "npm run compile && npm run package",
    "vscode:prepublish": "echo 'Skipping compile - already handled by build script'",
    "compile": "webpack --mode production",
    "compile:test": "tsc -p tsconfig.test.json",
    "watch": "webpack --mode development --watch",
    "watch-tests": "tsc -watch -p tsconfig.json",
    "dev": "webpack --mode development",
    "test:integration": "npm run compile && npm run compile:test && node ./out/test/runTest.js",
    "test:coverage": "jest --coverage",
    "test:coveragehtml": "jest --coverage --coverageReporters=html",
    "package": "vsce package",
    "publish": "vsce publish",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "build-install-test": "npm run build && VSIX=$(node -p \"require('./package.json').version\") && code --install-extension ./openas3d-vscode-$VSIX.vsix --force && code --reload-window && npm run test:unit",
    "build-install-e2e": "npm run build && VSIX=$(node -p \"require('./package.json').version\") && code --install-extension ./openas3d-vscode-$VSIX.vsix --force && code --reload-window && npm run test:e2e",
    "build-install-all": "npm run build && VSIX=$(node -p \"require('./package.json').version\") && code --install-extension ./openas3d-vscode-$VSIX.vsix --force && code --reload-window && npm run test:unit && npm run test:e2e",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "npm run test:integration"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/cross-spawn": "^6.0.6",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^8.28.0",
    "glob": "^13.0.0",
    "jest": "^30.2.0",
    "mocha": "^11.7.5",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/three": "^0.158.0",
    "cross-spawn": "^7.0.6",
    "dependency-cruiser": "^17.3.7",
    "three": "^0.158.0"
  }
}